# Database
DATABASE_URL="postgresql://username:password@localhost:5432/crypto_tracker?schema=public"

# Server Port
PORT=3001

# JWT Secrets (change these in production!)
ACCESS_TOKEN_SECRET="access-token-secret-change-me"
REFRESH_TOKEN_SECRET="refresh-token-secret-change-me"

# External APIs
COINGECKO_API_KEY="" # Optional but recommended
ALPHA_VANTAGE_API_KEY="" # Required for forex/commodities

# Redis (for caching and job queues)
REDIS_URL="redis://localhost:6379"

# Security (Encryption Key for API Keys)
# Required for encrypting sensitive data like user API keys.
# Must be 32 bytes or used to derive a 32-byte key.
ENCRYPTION_KEY="your-32-byte-encryption-key-change-this"

# Environment
NODE_ENV="development"